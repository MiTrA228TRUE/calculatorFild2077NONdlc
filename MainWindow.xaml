                <SolidColorBrush Color="#FF91E9EC" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="bt8" Content="8" HorizontalAlignment="Left" Height="90" Margin="120,334,0,0" VerticalAlignment="Top" Width="90" Click="bt0_Click">
