        </Button>
        <Button x:Name="bt5" Content="5" HorizontalAlignment="Left" Height="90" Margin="120,239,0,0" VerticalAlignment="Top" Width="90" Click="bt0_Click">
            <Button.Background>
                <SolidColorBrush Color="#FF91E9EC" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="bt6" Content="6" HorizontalAlignment="Left" Height="90" Margin="215,239,0,0" VerticalAlignment="Top" Width="90" Click="bt0_Click">
            <Button.Background>
                <SolidColorBrush Color="#FF91E9EC" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="bt7" Content="7" HorizontalAlignment="Left" Height="90" Margin="25,334,0,0" VerticalAlignment="Top" Width="90" Click="bt0_Click">
