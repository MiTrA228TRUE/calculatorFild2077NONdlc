        </Button>
        <Button x:Name="bt9" Content="9" HorizontalAlignment="Left" Height="90" Margin="215,334,0,0" VerticalAlignment="Top" Width="90" Click="bt0_Click">
            <Button.Background>
                <SolidColorBrush Color="#FF91E9EC" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="bt0" Content="0" HorizontalAlignment="Left" Height="45" Margin="25,144,0,0" VerticalAlignment="Top" Width="90" Click="bt0_Click">
            <Button.Background>
                <SolidColorBrush Color="#FF91E9EC" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <TextBox x:Name="tb_input" HorizontalAlignment="Center" Height="101" Margin="0,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="750" FontSize="24" IsReadOnly="True">
            <TextBox.Background>
                <SolidColorBrush Color="#FF98EAE0" Opacity="0.8"/>
            </TextBox.Background>
        </TextBox>
        <Button x:Name="btDIV" Content="/" HorizontalAlignment="Left" Height="90" Margin="339,239,0,0" VerticalAlignment="Top" Width="100" Click="btDIV_Click" Background="#FFB1EC91"/>
        <Button x:Name="btMUL" Content="*" HorizontalAlignment="Left" Height="90" Margin="339,334,0,0" VerticalAlignment="Top" Width="100" Click="btMUL_Click" Background="#FFB1EC91"/>
        <Button x:Name="btPL" Content="+" HorizontalAlignment="Left" Height="90" Margin="454,239,0,0" VerticalAlignment="Top" Width="100" Click="btPL_Click" Background="#FFB1EC91"/>
        <Button x:Name="btMIN" Content="-" HorizontalAlignment="Left" Height="90" Margin="454,334,0,0" VerticalAlignment="Top" Width="100" Click="btMIN_Click" Background="#FFB1EC91"/>
        <Button x:Name="tbRAW" Content="=" HorizontalAlignment="Left" Height="90" Margin="579,334,0,0" VerticalAlignment="Top" Width="196" Click="tbRAW_Click" Background="#FF2DA2ED"/>
        <TextBox x:Name="tb_result" HorizontalAlignment="Left" Height="90" Margin="339,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="436" IsReadOnly="True">
            <TextBox.Background>
                <SolidColorBrush Color="#FF98EAE0" Opacity="0.8"/>
